<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bibboxandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ta.activity.NewReservActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ta.activity.MonoAllocableActivity"
            android:label="@string/title_activity_mono_allocable" >
        </activity>
        <activity
            android:name="com.ta.activity.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.ta.activity.MyReservsActivity"
            android:label="@string/title_activity_my_reservs" >
        </activity>
        <activity
            android:name="com.ta.activity.CancelReservActivity"
            android:label="@string/title_activity_cancel_reserv" >
        </activity>
        <activity
            android:name="com.ta.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>
